<h1>New Note</h1>

<%= form_with(model: @note, url: {action: 'create'}) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title, required: true %>

  <%= f.label :body, 'Note' %>
  <%= f.text_area :body, required: true %>

  <%= f.label :tag_list, "Tags (optional)" %>
  <%= f.text_field :tag_list %>   

  <%= f.submit "Create" %>
<% end %>

<%= link_to 'Back', notes_path %>
